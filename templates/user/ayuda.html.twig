{% extends 'base.html.twig' %}

{% block title %}Inicio de sesión{% endblock %}

{% block main %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card bg-transparente sombra mx-auto mt-5" style="max-width: 300px;">
                <div class="card-body m-0" > 
                    {{ form_start(form) }}
                    
                        <h1 class="h1 font-weight-normal">Ayuda</h1>
                        <p class="text-muted small">Enviaremos un mensaje a su buzon, con un enlace para recuperar el acceso.</p>

                        <div class="row"> 
                            <div class="col-12">
                                <div class="form-group form-group-lg">
                                    <label class="small m-0">Correo Electrónico</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-lite text-bold bg-white">
                                                <i class="fa fa-envelope"></i>
                                            </span>
                                        </div>
                                        {{ form_widget(form.email) }}
                                    </div>
                                    <div class="form_errors small">{{ form_errors(form.email) }}</div>
                                </div>
                            </div> 
                        </div> 


                        <div class="input-group">
                            <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}"
                            >
                        </div>

                        <button class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>

                        <a class="ml-1 text-muted small" href="{{url('app_login')}}"><strong>¡Inicio de Sesión!</strong></a>
                        <a class="ml-1 text-muted small" href="{{url('usuario_perfil')}}">Registrar</a>
                    {{ form_end(form) }}
                </div>
            </div> 
        </div> 
    </div> 
</div>
{% endblock %}
