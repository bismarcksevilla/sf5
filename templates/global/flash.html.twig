<div class="container">
    <div class="row">
        <div class="col-12" id="alert-flash">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    {% set id_token = "ID_"~ random(50, 100)  %}
                    {# {% set id_token = "ID_"  %} #}
                    <div class="alert alert-{{ label }} text-center sombra"  id="{{id_token}}">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        <p class="m-1">
                            {% if label == 'success' %}<i class="fa fa-check-circle"></i>{% endif %}
                            {% if label == 'info' %}<i class="fa fa-exclamation-circle"></i>{% endif %}
                            {% if label == 'alert' %}<i class="fa fa-exclamation-circle"></i>{% endif %}
                            {% if label == 'warning' %}<i class="fa fa-exclamation-triangle"></i>{% endif %}
                            {% if label == 'danger' %}<i class="fa fa-bomb"></i>{% endif %}
                            {{ message }}
                        </p>
                        <script type="text/javascript">
                            setTimeout(function() {
                                document.getElementById('{{id_token}}').style.display='none';
                            },15000);
                        </script>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</div>